<div class="" id="page-content">
    <h1 class='text-center pt-2'><%= @user.username %></h1>

    <%= gravatar_for @user, size: 200 %>

    <div class='text-center mt-4'>
        <% if logged_in? && @user == current_user %>
            <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
            <%= button_to "Delete profile", user_path(current_user), class: "btn btn-outline-danger", method: :delete, onclick: "return confirm('Are you sure?')" %>
        <% end %>
    </div>

    <h3 class='text-center pt-2'>Articles</h3>

    <div class="flickr_pagination">
        <%= will_paginate @articles, :container => false%>
    </div>

    <%= render 'articles/article' %>

    <div class="flickr_pagination p-5">
        <%= will_paginate @articles, :container => false%>
    </div>

</div>