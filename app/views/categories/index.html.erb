<div class="" id="page-content">
    <h1 class='text-center pt-2'>Categories</h1>

    <div class="flickr_pagination">
        <%= will_paginate @categories, :container => false%>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <% @categories.each do |category| %>
            <div class="w-50 mt-5 card text-center shadow">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-primary' %></h5>
                    <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
                </div>
                <div class="card-footer text-muted">
                    <small> Created ago <%= time_ago_in_words(category.created_at) %> ago,
                    edited <%= time_ago_in_words(category.updated_at) %> ago</small>
                </div>
            </div>
        <% end %>
    </div>
    <div class="flickr_pagination p-5">
        <%= will_paginate @categories, :container => false%>
    </div>  
</div>