<div class="w-100 h-100" id="page-content">
    <h1 class='text-center pt-2'>Login for CTI Blog</h1>

    <div class='container bg-primary rounded shadow'>
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
            <div class="m-5">
                <%= f.label :email, class: 'form-label fw-bold text-light mt-5'%>
                <%= f.email_field :email, class: 'form-control shadow', id: 'inputEmail', placeholder: 'Enter email address...' %>
            </div>
            <div class="m-5">
                <%= f.label :password, class: 'form-label fw-bold text-light'%>
                <%= f.password_field :password, class: 'form-control shadow', id: 'inputPassword', placeholder: 'Enter your password...' %>
            </div>

            <div class='d-flex justify-content-center align-items-center w-100 gap-4'>
                <%= f.submit "Login", class: 'btn btn-success mb-4 shadow' %>
                <%= link_to 'Back', articles_path, method: :get, class: 'btn btn-danger mb-4 shadow' %>
            </div>

        <% end %>
    </div>
</div>